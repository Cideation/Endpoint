      "bay_arrangement_pattern": "alternating_even_odd",
      "component_modularity": "enabled",
      "floor_span_variance": "medium",
      "tilt_transformation": false,
      "generation_type": "rule_driven",
      "cad_integration_ready": true
    }
  },
  
  "microservice_integration": {
    "shared_resource_path": "/shared/global_design_parameters.json",
    "environment_variable": "GLOBAL_DESIGN_PARAMS_PATH",
    "cache_ttl_seconds": 3600,
    "reload_on_change": true
  },
  
  "usage_examples": {
    "python_import": "from shared.global_design_parameters import global_design_parameters",
    "node_enrichment": "node.update(global_design_parameters['building_components'])",
    "scoring_context": "score = calculate_score(component, global_design_parameters)",
    "ui_rendering": "render_component(component, global_design_parameters['generative_facade_tool'])"
  }
}
